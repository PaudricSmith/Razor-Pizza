@page
@model RazorPizza.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="PizzaModel.PizzaName" placeholder="What's your Pizza's name?" />
        <br />
        <input type="checkbox" asp-for="PizzaModel.TomatoSauce" placeholder="Tomato Sauce"/>Tomato Sauce
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Cheese" placeholder="Cheese" />Cheese
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Pepperoni" placeholder="Pepperoni" />Pepperoni
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Mushroom" placeholder="Mushroom" />Mushroom
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Tuna" placeholder="Tuna" />Tuna
        <br />                         
        <input type="checkbox" asp-for="PizzaModel.Pineapple" placeholder="Pineapple" />Pineapple
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Ham" placeholder="Ham" />Ham
        <br />                          
        <input type="checkbox" asp-for="PizzaModel.Beef" placeholder="Beef" />Beef
        <br />
        <input type="checkbox" asp-for="PizzaModel.Prawns" placeholder="Prawns" />Prawns
        <br />
        <button class="btn btn-outline-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>

<a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Checkout">Checkout</a>